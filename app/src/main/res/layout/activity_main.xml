<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <Spinner
        android:id="@+id/spinner"
        style="@style/LanguageSpinner"
        android:layout_height="@dimen/spinner_layout_height"
        android:layout_alignEnd="@+id/enter_text"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/enter_text"
        android:layout_gravity="right"
        android:layout_weight="0.46" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        style="@style/RecylerView"
        android:layout_height="@dimen/recycler_layout_height" />

</LinearLayout>
